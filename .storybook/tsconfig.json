{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "outDir": "dist/storybook"
  },
  "exclude": [
    "../**/*.spec.ts",
    "../**/*.test.ts",
    "../**/*.spec.js",
    "../**/*.test.js",
    "../**/*.spec.tsx",
    "../**/*.test.tsx",
    "../**/*.spec.jsx",
    "../**/*.test.jsx",
    "node_modules"
  ],
  "include": ["../src/**/*", "*.js", "../types/*.d.ts", "src/types.d.ts"],
  "files": ["../types/index.d.ts"]
}
